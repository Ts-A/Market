generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_DATABASE_URL")
  directUrl = env("SUPABASE_DIRECT_URL")
}

model Product {
  id       String @id
  name     String
  category String
  price    Float
  stock    Int

  carts CartProduct[]
}

model User {
  id       String @id
  name     String
  email    String
  role     String
  password String
  cart     Cart?
}

model Cart {
  id String @id()

  userId   String        @unique
  products CartProduct[]

  user User @relation(fields: [userId], references: [id])
}

model CartProduct {
  cartId    String
  productId String
  quantiy   Int

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@id([cartId, productId])
}
