generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_DATABASE_URL")
  directUrl = env("SUPABASE_DIRECT_URL")
}

model Product {
  id String @id
  name String
  category String
  price Float
  stock Int
}

model User {
  id String @id
  name String
}